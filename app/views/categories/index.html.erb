<h1>Catégories</h1>

<div class="categories-container">
  <h2 class="categories-title">Catégories</h2>

  <div class="categories-grid">
    <% @categories.each do |cat| %>
      <%= link_to category_path(cat), class: "category-card" do %>
        <%= image_tag "categories/#{category_image_filename(cat.name)}", class: "category-image" %>

        <div class="category-overlay">
          <h3 class="category-name"><%= cat.name %></h3>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= render "shared/navbar_navigation" %>
</div>
